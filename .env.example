# Turso / libSQL
TURSO_DATABASE_URL="libsql://<your-database-name>-<org>.turso.io"
TURSO_AUTH_TOKEN="<turso-auth-token>"

# Dev DB behavior:
# - In development/test, app uses a branch-specific local sqlite file by default.
# - Set USE_TURSO_IN_DEV="1" to use Turso instead.
USE_TURSO_IN_DEV="0"
LOCAL_DATABASE_DIR=".local-db"

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="<clerk-publishable-key>"
CLERK_SECRET_KEY="<clerk-secret-key>"

# Test auth overrides (local/CI only)
# SECURITY: never set these in Vercel preview/production. The app will throw on startup.
TEST_AUTH_MODE="0"
TEST_AUTH_SECRET="<random-test-secret>"
NEXT_PUBLIC_TEST_AUTH_MODE="0"

# Web Push (for live game notifications)
# Generate VAPID keys once and set both server and public key env vars.
WEB_PUSH_VAPID_SUBJECT="mailto:you@example.com"
WEB_PUSH_VAPID_PUBLIC_KEY="<vapid-public-key>"
WEB_PUSH_VAPID_PRIVATE_KEY="<vapid-private-key>"
NEXT_PUBLIC_WEB_PUSH_VAPID_PUBLIC_KEY="<vapid-public-key>"
